{
  "name": "@bundle/core",
  "version": "0.0.0",
  "access": "public",
  "type": "module",
  "description": "An animation library for the modern web which utilizes the Web Animation API (WAAPI) to create butter smooth animation.",
  "typedocMain": "src/index.ts",
  "legacy": "lib/index.cjs",
  "main": "lib/index.cjs",
  "browser": "lib/index.js",
  "module": "lib/index.js",
  "exports": {
    ".": {
      "require": {
        "types": "./lib/index.d.cts",
        "default": "./lib/index.cjs"
      },
      "import": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      }
    },
    "./lib/*": "./lib/*",
    "./src/*": "./src/*",
    "./plugins/*": "./src/plugins/*",
    "./util": "./src/utils/index.ts",
    "./utils/*": "./src/utils/*",
    "./configs/*": "./src/configs/*",
    "./package.json": "./package.json"
  },
  "directories": {
    "lib": "./lib",
    "src": "./src"
  },
  "files": [
    "lib",
    "src"
  ],
  "publishConfig": {
    "provenance": true
  },
  "scripts": {
    "build:wasm": "tsx ./scripts/build-wasm.ts",
    "build:src": "tsup; cp ./src/esbuild.wasm ./lib",
    "build": "pnpm build:wasm; pnpm build:src",
    "test:run": "vitest run && pnpm repl; pnpm deno",
    "test": "vitest",
    "repl": "tsx repl.ts",
    "deno": "deno run --allow-net --allow-env --allow-read --allow-write --allow-run ./repl.ts",
    "pre-release": "pnpm build; pnpm test:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/okikio/bundlejs.git",
    "directory": "packages/core"
  },
  "keywords": [
    "bundlejs",
    "bundle size checker",
    "esbuild-wasm",
    "gzip",
    "brotli",
    "deno",
    "bundler",
    "treeshake",
    "bundlephobia",
    "cdn",
    "github",
    "skypack",
    "unpkg",
    "compressed",
    "jsx",
    "minify",
    "typescript"
  ],
  "author": {
    "name": "Okiki Ojo",
    "email": "hey@okikio.dev",
    "url": "https://okikio.dev"
  },
  "bugs": {
    "url": "https://github.com/okikio/bundlejs/issues"
  },
  "homepage": "https://bundlejs.com",
  "dependencies": {
    "@bundle/compress": "workspace:^",
    "@bundle/utils": "workspace:^",
    "@libs/reactive": "npm:@jsr/libs__reactive@^5.0.2",
    "@libs/typing": "npm:@jsr/libs__typing@^3.1.2",
    "@logtape/logtape": "^0.9.0",
    "esbuild": "^0.25.0",
    "esbuild-wasm": "^0.25.0"
  },
  "peerDependencies": {
    "@bundle/compress": "^",
    "@bundle/utils": "^"
  },
  "devDependencies": {
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "vitest": "^3.0.7"
  }
}