---
import Anchor from "./Anchor";
import Container from "./Container";
import { ThemeSwitch } from "./ThemeSwitch";

import { ClearCacheButton } from "./ClearCacheButton";
---

<footer>
  <Container class="flex lt-xsm:flex-wrap items-center justify-between gap-2">
    <div class="flex flex-wrap gap-[inherit] lt-md:flex-col md:items-center">
      <label for="theme-selector">Change Theme:</label>

      <div class="flex flex-nowrap gap-[inherit]">
        <ThemeSwitch client:visible />
        <ClearCacheButton client:visible />
      </div>
    </div>

    <div class="text-center">
      <div class="px-4 py-2 inline-block">
        (c) 2022 <Anchor href="https://okikio.dev">Okiki Ojo</Anchor>
      </div>
    </div>

    <div class="lt-sm:hidden"> 
      <p class="bg-gray-200 dark:bg-quaternary inline-block px-4 py-2 rounded-md">
        Made by
        <Anchor href="https://twitter.com/okikio_dev" aria-label="Link to the Okiki Ojo's Twitter profile" title="Twitter">
          @okikio_dev
        </Anchor>
      </p>
    </div>
  </Container>
</footer>

<style lang="scss">
  footer {
    @apply pt-14 pb-6;

    :global([custom-theme-switch]) {
      @apply px-2 py-2 rounded-md;
    }

    :global([custom-button]) {
      @apply px-3 py-2 gap-3;
      @apply flex flex-row justify-center;
      @apply bg-secondary/20 hover:bg-secondary/40;
      
      :global(svg) {
        @apply w-6 h-6;
      }
    }
  }

  @at-root :global(.dark) {
    [custom-button] {
      @apply bg-primary/20 hover:bg-primary/40;
    }
  }
</style>