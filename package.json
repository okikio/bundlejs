{
  "name": "root",
  "version": "0.0.5",
  "private": true,
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "typedoc": "rm -r -f website/dists/docs/ && node ./.typedoc/build.js && typedoc --options ./.typedoc/typedoc.jsonc && node ./.typedoc/rehype.js",
    "pre-release:all": "pnpm -r pre-release && pnpm typedoc",
    "semantic-release": "semantic-release"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "assets": [
            "lib/**"
          ]
        }
      ]
    ]
  },
  "changelog": {
    "repo": "bundlejs",
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "documentation": ":memo: Documentation",
      "internal": ":house: Internal"
    },
    "cacheDir": ".changelog"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS --verbose"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "commitizen": "^4.3.0",
    "esbuild": "^0.19.5",
    "esno": "^0.17.0",
    "hastscript": "^8.0.0",
    "husky": "^8.0.3",
    "pnpm": "^8.10.0",
    "postcss": "^8.4.31",
    "postcss-font-grabber": "^3.1.0",
    "rehype": "^13.0.1",
    "rehype-external-links": "^3.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-urls": "^1.2.0",
    "sass": "^1.69.5",
    "semantic-release": "^22.0.6",
    "tiny-glob": "^0.2.9",
    "typedoc": "^0.25.3",
    "typedoc-plugin-extras": "^3.0.0",
    "typedoc-plugin-inline-sources": "^1.0.1",
    "typedoc-plugin-mdn-links": "^3.1.0",
    "typedoc-plugin-missing-exports": "^2.1.0",
    "typescript": "5.2.2",
    "ultra-runner": "^3.10.5"
  }
}
