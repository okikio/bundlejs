{
    "compilerOptions": {
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "moduleResolution": "node",
        "target": "ES2020",
        "module": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable",
            "WebWorker"
        ],
        "sourceMap": true,
        "outDir": "lib",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "docs"
    ]
}